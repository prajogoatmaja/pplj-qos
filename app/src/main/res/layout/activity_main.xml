<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aaaa.tubespplj.MainActivity"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accuracy : "
        app:layout_constraintTop_toBottomOf="@id/longtext"
        android:id="@+id/acctext"
        android:textSize="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accuracy"
        app:layout_constraintLeft_toRightOf="@id/acctext"
        app:layout_constraintTop_toBottomOf="@id/longitude"
        android:textSize="24dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lattext"
        android:text="Latitude :"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latitude"
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@id/lattext"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longtext"
        android:text="Longitude :"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/lattext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitude"
        android:text=""
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@id/longtext"
        app:layout_constraintTop_toBottomOf="@id/latitude"/>

    <Button
        android:id="@+id/getlocatbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Location"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>
